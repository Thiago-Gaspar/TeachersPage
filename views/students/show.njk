{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section 
            class="image" 
            style="background:url({{teacher.avatar_url}}) no-repeat center center /cover">
        </section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div>

            <div class="item">
                <div>Nome</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{teacher.schooling}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{teacher.format}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                {%for service in teacher.services%}
                <span class="color">{{service}}</span>
                {%endfor%}
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            </div>

            <div class="buttons">

            <a href= "/teachers/{{teacher.id}}/edit" class="button">Editar</a>
             <form  method="POST" action="/teachers?_method=DELETE">
              <input
                    type="hidden" 
                    name="id" 
                    value="{{teacher.id}}">

              <button class="btn" type="submit"> Deletar</button> 

              </div>
          
              </form> 



        </section>

    </div>   

{% endblock content %}