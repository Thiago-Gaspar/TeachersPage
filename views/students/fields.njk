      
        
        <div>
                <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input 
                            type="url" 
                            name="avatar_url"
                            placeholder="http://"
                            value="{{teacher.avatar_url}}">
                            
                    </div>
                </div>

                <div class="item">
                    <div>Professor(a)</div>
                    <div>
                        <input 
                            type="text"
                            name="name" 
                            placeholder="Nome completo:"
                            value="{{teacher.name}}">
                    </div>
                </div>

                <div class="item">
                    <div>Data de Nascimento</div>
                    <div>
                        <input 
                            type="date" 
                            name="birth"
                            value="{{teacher.birth}}">
                    </div>
                </div>

                <div class="item">
                    <div>Escolaridade</div>
                    <div>
                        <select name="schooling">
                            <option 
                            value="med" 
                            {% if teacher.schooling == 'med' %} selected
                            {% endif %}>
                            Ensino Médio Completo
                            </option>
                           
                           <option 
                            value="sup"
                            {% if teacher.schooling == 'sup' %} selected
                            {% endif %}
                            >Ensino Superior Completo
                            </option>
                            
                            <option 
                            value="mest"
                            {% if teacher.schooling == 'mest' %} selected
                            {% endif %}>
                            Mestrado e Doutorado
                            </option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                    <div>
                        <span class="color">
                            <input 
                                type="radio" 
                                name="format" 
                                value="Presencial"
                                {% if teacher.format == 'Presencial'%}
                                checked
                                {% endif %}>
                                Presencial
                                </span>
                        <span class="color">
                            <input 
                                type="radio" 
                                name="format"
                                value="À distância"
                                {% if teacher.format == 'À distância'%}
                                checked
                                {% endif %}>
                                À Distância
                                </span>
                    </div>
                </div>

                <div class="item">
                    <div>Área de Atuação</div>
                    <div>
                        <input 
                        type="text" 
                        name="services" 
                        placeholder="Informar quais matérias serão lecionadas"
                        value="{{teacher.services}}">
                    </div>
                </div>

                <div class="item">
                <button type="submit">Salvar</button>
                </div>

            </div>

             