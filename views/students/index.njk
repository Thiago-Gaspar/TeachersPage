{% extends "layout.njk" %}

{% block content %}



    <div class="card table-container">
       
        <a href="/students/create">Novo</a>

        <table  width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td> <span class="image_index" style="background-image: url({{student.avatar_url}})"></span>{{student.name}}</td>

                    <td> {%for service in student.services.split(",")%}
                        <span class="color">{{service}}</span>
                         {%endfor%}
                    </td>
                
                    <td> <a href="/students/{{student.id}}">Ver</a></td>
                </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>   

{% endblock content %}