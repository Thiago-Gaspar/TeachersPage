{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/teachers">

        <section class="image" style="background:url(https://source.unsplash.com/collection/517198/320x320) no-repeat center center /cover"></section>

        <section class="details">
            <h3>Novo Professor</h3>
            <div>
                <div class="item">
                    <div>Avatar URL</div>
                    <div>
                        <input type="url" name="avatar_url" placeholder="http://">
                    </div>
                </div>

                <div class="item">
                    <div>Professor(a)</div>
                    <div>
                        <input type="text" name="name" placeholder="Nome completo:">
                    </div>
                </div>

                <div class="item">
                    <div>Data de Nascimento</div>
                    <div>
                        <input type="date" name="birth">
                    </div>
                </div>

                <div class="item">
                    <div>Escolaridade</div>
                    <div>
                        <select name="schooling">
                            <option value="Ensino Médio">Ensino Médio Completo</option>
                            <option value="Ensino Superior">Ensino Superior Completo</option>
                            <option value="Mestrado e Doutorado">Mestrado e Doutorado</option>
                        </select>
                    </div>
                </div>

                <div class="item">
                    <div>Tipo de aula</div>
                    <div>
                        <span>
                            <input type="radio" name="format" value="Presencial" checked>Presencial</span>
                        <span>
                            <input type="radio" name="format" value="À distância">À Distância</span>
                    </div>
                </div>

                <div class="item">
                    <div>Área de Atuação</div>
                    <div>
                        <input type="text" name="services" placeholder="Informar quais matérias serão lecionadas">
                    </div>
                </div>

                <div class="item">
                <button type="submit">Salvar</button>
                </div>

            </div>

        </section>

    </form>

{% endblock content %}